<center><h2 class="page-header top">Register</h2></center>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register" class="register">
   <div class="form-group row">
    <label class="col-sm-2 col-form-label">Name</label>
    <input type="text" class="form-control col-sm-10" placeholder="Name" name="name">
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Mobile Number</label>
    <input type="tel" class="form-control col-sm-10" placeholder="Mobile Number" name="mobile">
  </div>
   <div class="form-group row">
    <label class="col-sm-2 col-form-label">Email</label>
    <input type="email" class="form-control col-sm-10" placeholder="Email" name="email">
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Address Line-1</label>
    <input type="text" class="form-control col-sm-10" placeholder="Address Line-1" name="address">
  </div>

    <fieldset disabled>
  <div class="form-group row">
      <label for="disabledTextInput" class="col-sm-2 col-form-label">City</label>
      <input type="text" id="disabledTextInput" class="form-control col-sm-10" placeholder="Jaipur">
    </div>
  <div class="form-group row">
      <label for="disabledTextInput" class="col-sm-2 col-form-label">State</label>
      <input type="text" id="disabledTextInput" class="form-control col-sm-10" placeholder="Rajasthan">
    </div>  
    <div class="form-group row">
      <label for="disabledTextInput" class="col-sm-2 col-form-label">Country</label>
      <input type="text" id="disabledTextInput" class="form-control col-sm-10" placeholder="India">
    </div>
    </fieldset>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Password</label>
    <input type="password" class="form-control col-sm-10" placeholder="Password" name="password">
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Confirm Password</label>
    <input type="password" class="form-control col-sm-10" placeholder="Password" name="password2">
  </div>
  <center><button type="submit" class="btn btnnnn btn-default">Register</button></center>
</form>

